/* Top Nav bar */
.navbar {
  display: flex;
  background-color: #0D1420;
  overflow: hidden;
  position: fixed;
  top: 0;
  width: 100%;
  height: 11vh;
  z-index: 2;
}

/* Search */
.navbar .search-box-container {
  padding-left: 5vw;
  flex: 85%;
  margin: auto;
  width: 50%;
}
.navbar .search-box-container .search-box {
  width: 100%;
  height: 5.5vh;
  background-color: white;
  border-radius: 5.5vh;
  position: relative;
}
.navbar .search-box-container .search-box .search-icon-box {
  position: absolute;
  top: 55%;
  left: 5%;
  transform: translateY(-45%);
}
.navbar .search-box-container .search-box .search-icon-box .search-icon {
  margin: 0;
  width: 20px;
  height: 20px;
}
.navbar .search-box-container .search-box .search-text-box {
  position: absolute;
  top: 50%;
  left: 15%;
  transform: translateY(-50%);
}
.navbar .search-box-container .search-box .search-text-box .search-text {
  font-size: 16px;
}

/* map */
.navbar .location-container {
  flex: 15%;
  padding-top: 2.5vh;
  padding-right: 5%;
  position: relative;
}
.navbar .location-container .location-icon-box {
  height: 5.5vh;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  padding-bottom: 0.5vh;
}
.navbar .location-container .location-icon-box .location-icon {
  width: 2vh;
  height: 3vh;
}
.navbar .location-container .location-icon-box .location-text {
  font-size: 14px;
  color: white;
}
.page-content {
  margin-top: 11vh;
  background-color: #0D1420;
}
/* Banner */
.page-content .sliding-images .slider {
  width: 100vw;
  height: 62vw;
}
.page-content .sliding-images .slider .sliding-image {
  width: 100%;
  height: 100%;
}
/* filter */
.filter-tabs {
  display: flex;
  background-color:#0D1420;
  justify-content: space-around;
  padding-top: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.filter-tab {
  font-size: 14px;
  background-color: white;
  color:black;
  border-radius: 5px;
  font-size: 25rpx;
  padding: 15rpx 25rpx;
}

/* Dark-background-cards */

.cards-container {
  padding: 30rpx 30rpx ;
  background-color: #0D1420;
}
.card-product {
  overflow: hidden;
  height: 300rpx;
  margin-bottom: 40rpx;
  border-radius: 10rpx;
  color:white;
  background: #121530;
  box-shadow: 0px 0px 15px #632DF5;
  display: flex;
  align-items: center;
  position: relative;
}
.card-product-infos {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 75%;
  position: relative;
  padding-left: 30rpx;

}
 .card-h2 {
    font-size: 32rpx;
    font-weight: bolder;
    top:0;
 }
  .card-p {
    font-size: 26rpx;
    opacity: 75%;
    font-weight: regular;
    opacity: .65;
 }
 .card-footer-p {
    font-size: 26rpx;
    font-weight: regular;
    opacity: .65;
    /* align-self: flex-end; */
 }

.card-product image {
  height: 100%;
  overflow:hidden;
  object-fit: cover;
