.navbar {
  display: flex;
  background-color: #0D1420;
  overflow: hidden;
  position: fixed;
  top: 0;
  width: 100%;
  height: 11vh;
  z-index: 1;
}
.navbar .search-box-container {
  padding-left: 5%;
  flex: 85%;
  margin: auto;
  width: 50%;
}
.navbar .search-box-container .search-box {
  width: 100%;
  height: 5.5vh;
  background-color: white;
  border-radius: 5.5vh;
  vertical-align: center;
  position: relative;
}
.navbar .search-box-container .search-box .search-icon-box {
  position: absolute;
  top: 55%;
  left: 5%;
  transform: translateY(-50%);
}
.navbar .search-box-container .search-box .search-icon-box .search-icon {
  margin: 0;
  width: 20px;
  height: 20px;
}
.navbar .search-box-container .search-box .search-text-box {
  position: absolute;
  top: 50%;
  left: 20%;
  transform: translateY(-50%);
}
.navbar .search-box-container .search-box .search-text-box .search-text {
  font-size: 16px;
}
.navbar .location-container {
  flex: 15%;
  padding-top: 2.5vh;
  padding-right: 5%;
  position: relative;
}
.navbar .location-container .location-icon-box {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}
.navbar .location-container .location-icon-box .location-icon {
  width: 20px;
  height: 30px;
}
.navbar .location-container .location-icon-box .location-text {
  font-size: 16px;
  color: white;
}
.page-content {
  margin-top: 11vh;
  background-color: #0D1420;
}
.page-content .sliding-images .slider {
  width: 100vw;
  height: 34vh;
}
.page-content .sliding-images .slider .sliding-image {
  width: 100%;
}
.page-content .filter-tabs {
  display: flex;
  align-content: space-between;
  text-align: center;
  margin-left: 3vw;
  margin-right: 3vw;
  padding-bottom: 2vw;
  padding-left: 5px;
}
.page-content .filter-tabs .filter-tab {
  flex: 20%;
  height: 4vh;
  font-size: 14px;
  background-color: #E5E5E5;
  border-radius: 1.5vh;
  margin-left: 2vw;
  margin-right: 2vw;
  line-height: 4vh;
  white-space: nowrap;
}
.page-content .filter-tabs .filter-tab .p{
  font-family: Verdana, Geneva, Tahoma, sans-serif
}
.page-content .tabs {
  display: flex;
  background-color: #0D1420;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 11vh;
}
.page-content .tabs .game-icon-box {
  flex: 50%;
  text-align: center;
}
.page-content .tabs .profile-icon-box {
  flex: 50%;
  text-align: center;
}
.page-content .tabs .game-icon-box .game-icon {
  height: 20vw;
  width: 20vw;
}
.page-content .tabs .profile-icon-box .profile-icon {
  margin-top: 1.5vh;
  height: 10vw;
  width: 10vw;
}
.page-content .tabs .profile-icon-box .p {
  color: white;
  font-size: 12px;
}