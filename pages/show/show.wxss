}

.description-box{
  padding: 5%;
}

.description-box .p{
  font-size: 14px;
  line-height: 1.2;
  opacity: .7;
  margin-bottom: 0;
  margin-top: 8px;
  color: #ACADB7;
}

.footer .tabs {
  display: flex;
  background-color: #0D1420;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 11vh;
}
.footer .tabs .game-icon-box {
  width: 100%;
  flex: 50%;
  text-align: center;
  position: relative;
}
.footer .tabs .profile-icon-box {
  flex: 50%;
  text-align: center;
  width: 100%;
  position: relative;
}
.footer .tabs .game-icon-box .game-icon {
  height: 9vh;
  width: 9vh;
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.footer .tabs .game-icon-box .p {
  color: white;
  font-size: 12px;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  position: absolute;
  top: 75%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.footer .tabs .profile-icon-box .profile-icon {
  margin: auto;
  height: 5vh;
  width: 5vh;
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.footer .tabs .profile-icon-box .p {
  color: white;
  font-size: 12px;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  position: absolute;
  top: 75%;
  left: 50%;
  transform: translate(-50%, -50%);
}
