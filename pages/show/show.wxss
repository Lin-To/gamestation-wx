}
.button image{
  padding-top: 6.25vw;
  height: 50%;
  width: 50%;
}
.section {
  color: white;
  margin: 5% 0;
}
.section .ph{
  font-size: 16px;
  color: white;
}
.radio-group {
  font-size: 16px;
}
.radio-buttons {
  padding-right: 30%;
}
.picker {
  width: 90vw;
  height: 3vh;
  color: white;
  font-size: 32rpx;
  padding-top: 1vh;
}
.sub-section {
  background-color: #1B1647;
