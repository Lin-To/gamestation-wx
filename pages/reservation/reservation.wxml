<view class="page">

  <view class="header">
    <text class="h1">
      Your Reservation Requests:
    </text>
  </view>

  <view class="cards-container">

    <view class="big-card">
      <view class="profile">
        <image class="avatar" alt="avatar" src="https://kitt.lewagon.com/placeholder/users/cveneziani" />

        <view class="card-h2">{{rentee}} wants to borrow your game</view>
      </view>
      <view class="card-product">
        <image src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" mode="aspectFill" />
        <view data-id="{{game.id}}" class="card-product-infos" bindtap="goToShow">
          <view class="content">
            <view class="card-h2">Name: {{game.name}}</view>
            <view class="card-p">Category:{{game.description}}</view>
            <view class="card-p">Edition:{{game.edition}}</view>
          </view>
          <view class="card-footer-p">Date:</view>
        </view>

        <view>

        </view>
      </view>
      <view class="response">
            <view class="accept-tab">
              <text class="p">Accept</text>
            </view>
            <view class="reject-tab">
              <text class="p">Decline</text>
            </view>
          </view>
    </view>
  </view>
</view>